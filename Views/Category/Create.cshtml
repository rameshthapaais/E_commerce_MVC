@model Category
<div class=" card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2"> Create the Category</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">

        <form method="post" class="row">

            <div class="border p-3">
                
                @*<div asp-validation-summary="ModelOnly"></div>*@
                <div class="form-floating py-2 col-12" >
                    <label asp-for="CategoryName" class="ms-2"></label>
                    <input asp-for="CategoryName" class="form-control border-0 shadow" />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="Order" class="ms-2"></label>
                    <input asp-for="Order" class="form-control border-0 shadow" />
                    <span asp-validation-for="Order" class="text-danger"></span>
                </div>

                <div class="row pt-4">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Create</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-light border  form-control">
                            Back to List
                        </a>
                    </div>
                </div>


            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}